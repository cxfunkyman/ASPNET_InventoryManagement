@model ASPNET_InventoryManagement.Models.product

@{
    ViewBag.Title = "ProductDetail";
}

<h2>Product Detail</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_name)
        </dd>

        <dt>
            @Html.DisplayName("Product Qty")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product_qty)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Update", "UpdateProduct", "Product", new { id = Model.id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Cancel", "DisplayProduct", "Product", new { @class = "btn btn-danger" })
</p>
