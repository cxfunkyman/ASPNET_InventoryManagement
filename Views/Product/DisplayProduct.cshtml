@model IEnumerable<ASPNET_InventoryManagement.Models.product>

@{
    ViewBag.Title = "Display Product";
}

<h2>Display Product</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct", "Product", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Product Qty")
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_qty)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateProduct", "Product", new { id = item.id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "ProductDetail", "Product", new { id = item.id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "DeleteProduct", "Product", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
