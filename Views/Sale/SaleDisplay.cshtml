@model IEnumerable<ASPNET_InventoryManagement.Models.sale>

@{
    ViewBag.Title = "SaleDisplay";
}

<h2>Sale Display</h2>

<p>
    @Html.ActionLink("Create New", "SaleProduct", "Sale", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sold Product")
        </th>
        <th>
            @Html.DisplayName("Sale Qty")
        </th>
        <th>
            @Html.DisplayName("Sale Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sale_prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sale_qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sale_date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Sale", new { id = item.id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", "Sale", new { id = item.id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", "Sale", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
