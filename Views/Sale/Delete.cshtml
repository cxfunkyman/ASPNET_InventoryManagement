@model ASPNET_InventoryManagement.Models.sale

@{
    ViewBag.Title = "Delete";
}

<h2>Purchase Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sale delete</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sale_prod)
        </dd>

        <dt>
            @Html.DisplayName("Sale Qty")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sale_qty)
        </dd>

        <dt>
            @Html.DisplayName("Sale Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sale_date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" /> |
            @Html.ActionLink("Cancel", "SaleDisplay", "Sale", new { }, new { @class = "btn btn-danger" })
        </div>
    }
</div>
